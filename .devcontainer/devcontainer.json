{
    "name": "rust-devcontainer",
    "image": "mcr.microsoft.com/devcontainers/rust:latest",
    "postCreateCommand": "rustc --version",
    "remoteUser": "vscode",
    "customizations": {
        "vscode": {
            "extensions": [
                "EditorConfig.EditorConfig",
                "vadimcn.vscode-lldb",
                "tamasfe.even-better-toml",
                "rust-lang.rust-analyzer"
            ]
        }
    }
}
